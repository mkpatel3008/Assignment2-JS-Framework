{{> header}}

<div class="container bg-light">
    <h1>Login</h1>
</div>
<div class="container">
  <div class="row">
    <div class="col-lg" style="padding: 5em; line-height:3em">
      <form action="/dashboard" method="POST">
          <div class="mb-3">
            <input type="email" class="form-control" id="Eid" name="email" placeholder="Employee Email-ID">
          </div>
          <div class="mb-3">
            <input type="password" class="form-control" id="password" name="password" placeholder="Enter New Password">
          </div>
          <button type="submit" name="submit" class="btn btn-primary" style="float:left;">Submit</button>
      </form>
    </div>
  </div>
</div>

{{> footer}}